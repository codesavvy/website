      <li<% if urlContains 'about' %> class="current"<% end %>><a href="/about">About</a></li>
      <li><a href="mailto:jjfutbol@gmail.com">Contact</a></li>
    </ul>
    
  </nav>
  
  <section id="content">
  
    <div class="inner">
      
      <% if @contentTitle %><h2><%= @contentTitle %></h2><% end %>
      
