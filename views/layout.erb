  <nav id="nav">
    
    <ul>
      <li<% if urlContains 'archives' %> class="current"<% end %>><a href="/archives">Blog</a></li>
      <li<% if urlContains 'resume' %> class="current"<% end %>><a href="/resume">Resume</a></li>
      <li<% if urlContains 'presentations' %> class="current"<% end %>><a href="/presentations">Presentations</a></li>
